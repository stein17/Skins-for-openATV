  	<!--  Template_Date -->
  <screen name="Template_Date">
    <eLabel position="0,0" size="1280,88" backgroundColor="backgroundtop" zPosition="-1"/>
	<eLabel position="0,675" size="1280,48" backgroundColor="backgroundtop" zPosition="-1" />
	
    <ePixmap pixmap="PLi-HD-FullNight_stein17_Mod/border/smallshadowline.png" position="0,85" size="1280,2" zPosition="2" />
    <ePixmap pixmap="PLi-HD-FullNight_stein17_Mod/border/smallshadowline.png" position="0,675" size="1280,2" zPosition="2"/>
	
     <widget source="global.CurrentTime" render="Label" position="1100,20" size="150,55" transparent="1" zPosition="1" font="Regular;24" valign="center" halign="right">
      <convert type="ClockToText">Format:%H:%M</convert>
    </widget>
    <widget source="global.CurrentTime" render="Label" position="950,44" size="300,55" transparent="1" zPosition="1" font="Regular;16" valign="center" halign="right">
      <convert type="ClockToText">Date</convert>
    </widget>
  </screen>
    <!-- Template_Date_Pig -->
  <screen name="Template_Date_Pig">
  
    <eLabel position="0,0" size="1280,88" backgroundColor="backgroundtop" zPosition="-1"/>
	<eLabel position="0,675" size="1280,48" backgroundColor="backgroundtop" zPosition="-1" />
	
    <ePixmap pixmap="PLi-HD-FullNight_stein17_Mod/border/smallshadowline.png" position="0,85" size="1280,2" zPosition="2" />
    <ePixmap pixmap="PLi-HD-FullNight_stein17_Mod/border/smallshadowline.png" position="0,675" size="1280,2" zPosition="2"/>
	
     <widget source="global.CurrentTime" render="Label" position="1100,20" size="150,55" foregroundColor="foreground" backgroundColor="background" borderWidth="1" borderColor="black" transparent="1" zPosition="1" font="Regular;24" valign="center" halign="right">
      <convert type="ClockToText">Format:%H:%M</convert>
    </widget>
    <widget source="global.CurrentTime" render="Label" position="950,44" size="300,55" foregroundColor="foreground" backgroundColor="background" borderWidth="1" borderColor="black" transparent="1" zPosition="1" font="Regular;16" valign="center" halign="right">
      <convert type="ClockToText">Date</convert>
    </widget>

	<eLabel position="0,88" size="1280,588" backgroundColor="transpBlack" zPosition="-1" />
	
	<widget source="session.VideoPicture" render="Pig" position="25,98" size="440,248" backgroundColor="transparent" zPosition="2" />
    <widget source="session.CurrentService" render="Label" position="25,98" size="440,20" zPosition="3" foregroundColor="foreground" backgroundColor="background" borderWidth="1" borderColor="black" transparent="1" font="Regular;18" noWrap="1" valign="center" halign="center">
      <convert type="ServiceName">Name</convert>
    </widget>
  </screen>
  
  
  	<!--  Template_Title_Date -->
  <screen name="Template_Title_Date">
    <panel name="Template_Date" />
	<widget source="Title" render="Label" position="25,30" size="1085,55" foregroundColor="foreground" backgroundColor="background" borderWidth="1" borderColor="black" transparent="1" zPosition="1" font="Regular;24" valign="center" />
  </screen>
	<!-- Template_Title_Date_Pig -->
  <screen name="Template_Title_Date_Pig">
    <eLabel position="0,0" size="1280,88" backgroundColor="backgroundtop" zPosition="-1"/>
	<eLabel position="0,675" size="1280,48" backgroundColor="backgroundtop" zPosition="-1" />
	
    <ePixmap pixmap="PLi-HD-FullNight_stein17_Mod/border/smallshadowline.png" position="0,85" size="1280,2" zPosition="2" />
    <ePixmap pixmap="PLi-HD-FullNight_stein17_Mod/border/smallshadowline.png" position="0,675" size="1280,2" zPosition="2"/>
	
     <widget source="global.CurrentTime" render="Label" position="1100,20" size="150,55" foregroundColor="foreground" backgroundColor="background" borderWidth="1" borderColor="black" transparent="1" zPosition="1" font="Regular;24" valign="center" halign="right">
      <convert type="ClockToText">Format:%H:%M</convert>
    </widget>
	
    <widget source="global.CurrentTime" render="Label" position="950,44" size="300,55" foregroundColor="foreground" backgroundColor="background" borderWidth="1" borderColor="black" transparent="1" zPosition="1" font="Regular;16" valign="center" halign="right">
      <convert type="ClockToText">Date</convert>
    </widget>
	
	<widget source="Title" render="Label" position="25,30" size="1085,55" foregroundColor="foreground" backgroundColor="background" borderWidth="1" borderColor="black" transparent="1" zPosition="1" font="Regular;24" valign="center" />
	
	<eLabel position="0,88" size="1280,588" backgroundColor="transpBlack" zPosition="-1" />
	
	<widget source="session.VideoPicture" render="Pig" position="25,98" size="440,248" backgroundColor="transparent" zPosition="2" />
    <widget source="session.CurrentService" render="Label" position="25,98" size="440,20" zPosition="3" foregroundColor="foreground" backgroundColor="background" borderWidth="1" borderColor="black" transparent="1" font="Regular;18" noWrap="1" valign="center" halign="center">
      <convert type="ServiceName">Name</convert>
    </widget>
	
  </screen>
  
  
  
